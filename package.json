{
  "name": "olse-receiver-accelerator",
  "version": "0.0.1",
  "description": "A reference repository to help accelerate the development of a GOV.UK One Login Signal Exchange Receiver",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "container:build": "CONTAINER=true node esbuild.config.mjs",
    "container:watch:build": "npm run container:build -- --watch",
    "container:serve": "nodemon -L -V dist/server.js",
    "container:dev": "concurrently \"npm:container:watch:build\" \"npm:container:serve\"",
    "vendor:test": "jest --config tests/vendor/jest.config.ts",
    "test:unit": "jest --config tests/implementor/unit/jest.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/govuk-one-login/olse-receiver-accelerator.git"
  },
  "author": "GOV.UK One Login",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/govuk-one-login/olse-receiver-accelerator/issues"
  },
  "homepage": "https://github.com/govuk-one-login/olse-receiver-accelerator#readme",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "lint-staged": {
    "*": "npm run format:fix",
    "*.{js,ts}": "npm run lint:fix"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
