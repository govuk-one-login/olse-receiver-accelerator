{
  "name": "olse-receiver-accelerator",
  "version": "0.0.1",
  "description": "A reference repository to help accelerate the development of a GOV.UK One Login Signal Exchange Receiver",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "prepare": "husky",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest --config tests/unit/jest.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/govuk-one-login/olse-receiver-accelerator.git"
  },
  "author": "GOV.UK One Login",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/govuk-one-login/olse-receiver-accelerator/issues"
  },
  "homepage": "https://github.com/govuk-one-login/olse-receiver-accelerator#readme",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
